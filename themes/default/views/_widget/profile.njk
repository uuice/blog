        <image src="{{ sysConfig.avatar}}"></image>
      {% endif%}
      <div class="img-dim"></div>
    </div>
    <div class="info">
      <div class="username">{{sysConfig.title}} </div>
      <div class="dot"></div>
      <div class="subtitle">{{sysConfig.subTitle}}</div>
      <div class="link-list">
        {# <% for(let item of theme.links) { %>
          <a class="link-btn" href="<%- item.url %>" title="<%- item.name %>"><i class="<%- item.icon %>"></i></a>
        <% } %>  #}
      </div>  
    </div>
  </div>
